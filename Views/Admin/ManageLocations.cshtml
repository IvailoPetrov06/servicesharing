@model IEnumerable<servicesharing.Data.Entities.Location>

@{
    ViewData["Title"] = "Управление на локации";
}
<style>
    body {
        background-image: url('../images/location.jpg');
        background-size: cover;
        background-attachment: fixed; /* Keeps the background static */
        color: #ecf0f1; /* Text in light grey for contrast */
        margin: 0;
        padding: 0;
        text-align: center;
    }
    .promo-table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

        .promo-table thead {
            background-color: #212529; /* Черен фон */
            color: white;
        }

        .promo-table th,
        .promo-table td {
            padding: 12px 16px;
            text-align: center;
            vertical-align: middle;
        }

        .promo-table td {
            background-color: #fff;
        }

    .btn-danger {
        border-radius: 5px;
        padding: 5px 12px;
        font-size: 0.9rem;
    }

    h2 {
        color: #000;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .alert-success {
        margin-top: 10px;
    }
</style>
<h2 class="mb-3">Управление на сервизни локации</h2>

<a class="btn btn-success mb-3" asp-action="Create">Добави нова локация</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Име</th>
            <th>Адрес</th>
            <th>Координати</th>
            <th>Детайли</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loc in Model)
        {
            <tr>
                <td>@loc.Name</td>
                <td>@loc.Address</td>
                <td>@loc.Latitude, @loc.Longitude</td>
                <td>@loc.Details</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@loc.Id">Редактирай</a>
                    <form asp-action="Delete" asp-route-id="@loc.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Изтрий</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
