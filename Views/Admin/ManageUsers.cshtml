@model List<servicesharing.Models.Users>

@{
    ViewData["Title"] = "Управление на потребители";
}

<h2>Управление на потребители</h2>
<table class="table">
    <thead>
        <tr>
            <th>Име</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Редактиране</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>
