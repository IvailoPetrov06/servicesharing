@model servicesharing.Data.Entities.User

@{
    ViewData["Title"] = "Изтриване на потребител";
}

<div class="container mt-4">
    <h2 class="text-center text-danger">Потвърждение за изтриване</h2>
    <p class="text-center">Сигурни ли сте, че искате да изтриете потребителя <strong>@Model.FullName</strong> с имейл <strong>@Model.Email</strong>?</p>

    <div class="text-center mt-4">
        <form asp-action="ConfirmDeleteUser" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Изтриване</button>
            <a asp-action="ManageUsers" class="btn btn-secondary">Отказ</a>
        </form>
    </div>
</div>