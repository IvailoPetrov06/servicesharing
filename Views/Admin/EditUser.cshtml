@model servicesharing.Data.Entities.User

@{
    ViewData["Title"] = "Редактиране на потребител";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Редактиране на потребител</title>
    <style>
        /* General Styling */
        body {

            background: linear-gradient(135deg, #6c63ff, #00c6ff);
            color: #333;
            justify-content: center;
            align-items: center;
        }

        .card {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        }

        .card-header {
            background-color: #4b0082;
            color: #fff;
            text-align: center;
            font-size: 1.5rem;
            padding: 1rem;
        }

        .card-body {
            padding: 2rem;
            background-color: #ffffff;
        }

        .form-label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #6c63ff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #4b0082;
            }

        .btn-secondary {
            background-color: #00c6ff;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #007bff;
            }

        .alert {
            margin-top: 1rem;
        }

        footer {
            text-align: center;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                Редактиране на потребител
            </div>
            <div class="card-body">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center">@TempData["Error"]</div>
                }
                <form asp-action="EditUser" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Име</label>
                        <input asp-for="FullName" class="form-control" placeholder="Въведете пълно име" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Имейл</label>
                        <input asp-for="Email" class="form-control" placeholder="Въведете имейл адрес" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Запазване</button>
                        <a asp-action="ManageUsers" class="btn btn-secondary">Назад</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
