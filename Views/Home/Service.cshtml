                    'Ioniq 5', 'Ioniq 6', 'Venue', 'Nexo'
                ];
            } else if (brand === 'kia') {
                models = [
                    'Optima', 'Stinger', 'Sportage', 'Sorento', 'Telluride', 'Soul',
                    'Seltos', 'Niro', 'Carnival', 'K5', 'EV6'
                ];
            } else if (brand === 'volkswagen') {
                models = [
                    'Golf', 'Jetta', 'Passat', 'Arteon', 'Atlas', 'Tiguan', 'ID.4',
                    'ID.Buzz', 'Taos', 'Polo'
                ];
            } else if (brand === 'subaru') {
                models = [
                    'Outback', 'Forester', 'Impreza', 'WRX', 'Ascent', 'Crosstrek',
                    'Legacy', 'BRZ'
                ];
            } else if (brand === 'mazda') {
                models = [
                    'Mazda3', 'Mazda6', 'CX-3', 'CX-30', 'CX-5', 'CX-50', 'CX-9',
                    'MX-5 Miata'
                ];
            } else if (brand === 'tesla') {
                models = [
                    'Model S', 'Model 3', 'Model X', 'Model Y', 'Cybertruck', 'Roadster'
                ];
            } else if (brand === 'volvo') {
                models = [
                    'XC40', 'XC60', 'XC90', 'S60', 'S90', 'V60', 'V90', 'C40 Recharge'
                ];
            }

            models.forEach(model => {
                const option = document.createElement('option');
                option.value = model;
                option.textContent = model;
                modelSelect.appendChild(option);
            });
        }

        // Show available service providers based on car details
        function showServiceProviders() {
            const brand = document.getElementById('car-brand').value;
            const model = document.getElementById('car-model').value;
            const year = document.getElementById('car-year').value;

            const serviceDetails = document.getElementById('service-details');
            serviceDetails.innerHTML = `<h4>Налични автосервизи за ${brand} ${model} (${year}):</h4>`;

            // Example service providers (you can dynamically load them)
            serviceDetails.innerHTML += `
                        <p>Автосерв 1: Ремонт на двигатели</p>
                        <p>Автосерв 2: Смяна на гуми</p>
                        <p>Автосерв 3: Диагностика на автомобил</p>
                    `;
        }

        // Go back to the car selection
        function goBack() {
            document.getElementById('car-selection').style.display = 'none';
        }
    </script>

</body>
</html>
