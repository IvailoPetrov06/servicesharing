@model List<servicesharing.Data.Entities.Reservation>

@{
    ViewData["Title"] = "Моите резервации";
}

<div class="container mt-4">
    <h2 class="text-center">Моите резервации</h2>
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Услуга</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.ServiceName</td>
                    <td>
                        @if (reservation.Status.ToString() == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Очаква се</span>
                        }
                        else if (reservation.Status.ToString() == "Completed")
                        {
                            <span class="badge bg-success">Завършено</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Отказано</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>