@model List<servicesharing.Data.Entities.Reservation>

@{
    ViewData["Title"] = "Моите резервации";
}

<style>
    .footer {
        text-align: center;
        padding: 0.5rem 0;
        background-color: #212529;
        color: #ecf0f1;
        font-size: 0.9rem;
        position: relative;
        bottom: 0;
        width: 100%;
    }

        .footer a {
            color: #ecf0f1;
            text-decoration: none;
        }

            .footer a:hover {
                text-decoration: underline;
            }
</style>

<div class="container mt-4">
    <h2 class="text-center">Моите резервации</h2>
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Услуга</th>
                <th>Дата</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.ServiceName</td>
                    <td>@reservation.ReservationDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        @if (reservation.Status.ToString() == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Очаква се</span>
                        }
                        else if (reservation.Status.ToString() == "Completed")
                        {
                            <span class="badge bg-success">Завършено</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Отказано</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

