@model servicesharing.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Редактиране на Резервация";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="ServiceId" class="control-label"></label>

        @if (ViewData["Services"] != null && ((List<servicesharing.Models.Service>)ViewData["Services"]).Any())
        {
            <select asp-for="ServiceId" class="form-control" asp-items="@(new SelectList(ViewData["Services"] as List<servicesharing.Models.Service>, "Id", "Name", Model.ServiceId))"></select>
        }
        else
        {
            <p>Няма налични услуги.</p>
        }

        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerEmail" class="control-label"></label>
        <input asp-for="CustomerEmail" class="form-control" />
        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReservationDate" class="control-label"></label>
        <input asp-for="ReservationDate" class="form-control" />
        <span asp-validation-for="ReservationDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Запази промени</button>
</form>

<div>
    <a asp-action="Index">Назад към списъка с резервации</a>
</div>
