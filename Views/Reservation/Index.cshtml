@model IEnumerable<Reservation>

<h2>Резервации</h2>

<a asp-action="Create" class="btn btn-success">Създай нова резервация</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Услуга</th>
            <th>Имейл</th>
            <th>Дата на резервация</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.ServiceId</td>
                <td>@reservation.CustomerEmail</td>
                <td>@reservation.ReservationDate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@reservation.Id" class="btn btn-primary">Редактирай</a>
                    <a asp-action="Delete" asp-route-id="@reservation.Id" class="btn btn-danger">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
