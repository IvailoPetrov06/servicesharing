@model servicesharing.ViewModels.ReservationViewModel

<h2>Създаване на резервация</h2>

<!-- Показване на съобщение за успех -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Услуга -->
    <div class="mb-3">
        <label asp-for="ServiceId" class="form-label">Услуга</label>
        <select asp-for="ServiceId" class="form-select">
            <option value="">Изберете услуга</option>
            <option value="1">Услуга 1</option>
            <option value="2">Услуга 2</option>
            <option value="3">Услуга 3</option>
        </select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>

    <!-- Имейл на клиента -->
    <div class="mb-3">
        <label asp-for="CustomerEmail" class="form-label">Имейл на клиента</label>
        <input asp-for="CustomerEmail" class="form-control" />
        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
    </div>

    <!-- Дата на резервацията -->
    <div class="mb-3">
        <label asp-for="ReservationDate" class="form-label">Дата на резервацията</label>
        <input asp-for="ReservationDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="ReservationDate" class="text-danger"></span>
    </div>

    <input type="submit" value="Създай резервация" class="btn btn-success" />
</form>
