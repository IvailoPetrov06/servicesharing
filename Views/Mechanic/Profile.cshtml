@{
    // Механик 1
    var mechanicName = "Иван Георгиев";
    var experience = "5 години";
    var rating = "4.8/5";
    var certifications = "Основен курс по автомобилни ремонти, Специализация по диагностика на двигатели";

    // Услуги за механик 1
    var services = new[] {
        new { Name = "Смяна на масло и филтри", CarModel = "Ford Mustang" },
        new { Name = "Диагностика на двигатели", CarModel = "Audi A6" },
        new { Name = "Ремонт на спирачни системи", CarModel = "Porsche Cayenne" }
    };

    // Отзиви за механик 1
    var reviews = new[] {
        new { CustomerName = "Петър Иванов", Comment = "Професионализъм и внимание към детайлите.", Rating = "4.5/5" },
        new { CustomerName = "Георги Николов", Comment = "Бързо и качествено обслужване.", Rating = "5/5" }
    };
}
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Профил на механика: @mechanicName</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
        }

        h1 {
            color: #000;
        }

        .content {
            margin-top: 20px;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

            .content h3 {
                color: #333;
            }

            .content p {
                font-size: 16px;
            }

        .mechanic-photo {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 20px;
        }

        .services-list, .reviews {
            margin-top: 30px;
        }

            .services-list ul, .reviews ul {
                list-style-type: none;
                padding: 0;
            }

            .services-list li, .reviews li {
                background-color: #f1f1f1;
                margin: 10px 0;
                padding: 10px;
                border-radius: 5px;
            }

        .button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.2em;
            cursor: pointer;
            text-decoration: none;
        }

            .button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>

    <h1>Профил на механика: @mechanicName</h1>

    <div class="content">
        <!-- Механик Фото -->
        <img src="https://via.placeholder.com/150" alt="@mechanicName" class="mechanic-photo">

        <!-- Информация за механика -->
        <h3>Информация за механика:</h3>
        <p><strong>Опит:</strong> @experience</p>
        <p><strong>Оценка:</strong> @rating</p>
        <p><strong>Сертификати:</strong> @certifications</p>

        <!-- Списък с услуги -->
        <div class="services-list">
            <h3>Услуги:</h3>
            @if (services != null && services.Length > 0)
            {
                <ul>
                    @foreach (var service in services)
                    {
                        <li>@service.Name - <strong>Колата: @service.CarModel</strong></li>
                    }
                </ul>
            }
            else
            {
                <p>Няма налични услуги.</p>
            }
        </div>

        <!-- Отзиви -->
        <div class="reviews">
            <h3>Отзиви:</h3>
            @if (reviews != null && reviews.Length > 0)
            {
                <ul>
                    @foreach (var review in reviews)
                    {
                        <li><strong>@review.CustomerName</strong>: <strong>@review.Rating</strong> - @review.Comment</li>
                    }
                </ul>
            }
            else
            {
                <p>Няма налични отзиви.</p>
            }
        </div>
    </div>

</body>
</html>
