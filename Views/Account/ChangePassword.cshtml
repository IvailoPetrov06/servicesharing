@using servicesharing.ViewModels;
@model ChangePasswordViewModel;

@{
    ViewData["Title"] = "Смяна на парола";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4">Смяна на парола</h2>
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Имейл -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Имейл</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <!-- Нова парола -->
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">Нова парола</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Потвърдете новата парола -->
            <div class="mb-3">
                <label asp-for="ConfirmNewPassword" class="form-label">Потвърдете новата парола</label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <input type="submit" value="Подай" class="btn btn-success w-100 p-2" />
            <div class="text-center mt-2">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none mt-3">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}