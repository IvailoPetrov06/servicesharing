@model servicesharing.ViewModels.ProfileViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Профил</title>
    <style>
        /* General Styling */
        body {
            font-family: 'Roboto', Arial, sans-serif;
            background: linear-gradient(135deg, #4b0082, #00c6ff);
            color: #333;
            margin: 0;
            padding: 0;
        }

        h2 {
            color: #fff;
            text-align: center;
            margin-top: 20px;
            font-size: 32px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
            animation: fadeInDown 1s ease-out;
        }


        /* Profile Info Container */
        .profile-info {
            margin: 50px auto;
            max-width: 400px;
            padding: 30px;
            border-radius: 16px;
            background-color: #ffffff;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.3);
            animation: zoomIn 0.7s ease-out;
        }

        .profile-name {
            font-size: 24px;
            color: #000;
            font-weight: bold;
            text-align: center;
            margin-bottom: 25px;
            animation: slideInLeft 0.7s ease-out;
        }

        .profile-label {
            color: #555;
            font-weight: bold;
        }

        .text-center p {
            color: #4b0082;
            font-weight: bold;
        }


        /* Form Styling */
        .form-container {
            margin-bottom: 25px;
            animation: fadeIn 1.2s ease-in-out;
        }

        .form-label {
            font-size: 16px;
            color: #333;
            margin-bottom: 10px;
            display: block;
        }

        .form-input {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            margin-bottom: 15px;
            transition: border-color 0.3s;
        }

            .form-input:focus {
                border-color: #4b0082;
                outline: none;
            }

        /* Button Styling */
        .btn {
            display: block;
            width: 100%;
            padding: 12px;
            font-size: 16px;
            text-align: center;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }

        .btn-primary {
            background-color: #4b0082;
        }

        .btn-success {
            background-color: #28a745;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn:hover {
            opacity: 0.9;
            transform: scale(1.02);
        }

        .btn:focus {
            outline: none;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        /* Animations */
        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes zoomIn {
            from

        {
            opacity: 0;
            transform: scale(0.8);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }

        }

        @@keyframes slideInLeft {
            from

        {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive Design */
        @@media screen and (max-width: 600px) {
            .profile-info

        {
            margin: 20px auto;
            padding: 20px;
        }

        h2 {
            font-size: 28px;
        }

        .btn {
            font-size: 14px;
        }

        }
    </style>
</head>
<body>
    <h2 class="text-center mt-4">Профил</h2>
    <div class="profile-info">
        <p class="profile-name">
            <strong class="profile-label"></strong> @Model.FullName
        </p>
        <p class="profile-role">
            <strong class="profile-label"></strong> @Model.Role
        </p>
        <form asp-action="UpdateEmail" method="post" class="form-container">
            <label for="email" class="form-label">
                <strong class="profile-label">Нов имейл:</strong>
            </label>
            <input type="email" id="email" name="newEmail" value="@Model.Email" class="form-input"/>
            <button type="submit" class="btn btn-primary">Обнови имейла</button>
        </form>
        <form asp-action="ChangePasswordFromProfile" method="post" class="form-container">
            <label for="currentPassword" class="form-label">
                <strong class="profile-label">Текуща парола:</strong>
            </label>
            <input type="password" id="currentPassword" name="currentPassword" class="form-input" required />

            <label for="newPassword" class="form-label">
                <strong class="profile-label">Нова парола:</strong>
            </label>
            <input type="password" id="newPassword" name="newPassword" class="form-input" required />

            <label for="confirmNewPassword" class="form-label">
                <strong class="profile-label">Потвърди новата парола:</strong>
            </label>
            <input type="password" id="confirmNewPassword" name="confirmNewPassword" class="form-input" required />

            <button type="submit" class="btn btn-success">Промени паролата</button>
        </form>
        <form asp-action="DeleteAccountConfirmed" method="post">
            <button type="submit" class="btn btn-danger">Изтрий акаунта</button>
        </form>
    </div>
</body>
</html>
