@model servicesharing.ViewModels.ProfileViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Профил</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }

        /* Profile Info */
        .profile-info {
            margin: 20px auto;
            max-width: 400px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #ffffff;
        }

        .profile-name {
            font-size: 18px;
            color: #333;
            margin-bottom: 10px;
        }

        .profile-label {
            color: #555;
        }

        /* Forms */
        .form-container {
            margin-bottom: 15px;
        }

        .form-label {
            font-size: 18px;
            color: #333;
            display: block;
            margin-bottom: 5px;
        }

        .form-input {
            width: 100%;
            padding: 8px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Buttons */
        .btn {
            padding: 8px 15px;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-success {
            background-color: #28a745;
        }

        .btn:hover {
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <h2 class="text-center mt-4">Профил</h2>
    <div class="profile-info">
        <p class="profile-name">
            <strong class="profile-label">Име:</strong> @Model.FullName
        </p>
        <form asp-action="UpdateEmail" method="post" class="form-container">
            <label for="email" class="form-label">
                <strong class="profile-label">Имейл:</strong>
            </label>
            <input type="email" id="email" name="NewEmail" value="@Model.Email" class="form-input" required />
            <button type="submit" class="btn btn-primary">Обнови имейла</button>
        </form>
        <form asp-action="DeleteAccount" method="post" class="form-container">
            <button type="submit" class="btn btn-danger">Изтрий акаунта</button>
        </form>
    </div>
</body>
</html>
