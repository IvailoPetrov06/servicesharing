@{
    var serviceId = 1; // Това е само за пример. Можете да зададете стойността на serviceId динамично.
    
    // Примерни услуги:
    var services = new List<dynamic>
    {
        new { Id = 1, Name = "Ремонт на двигател", Description = "Подмяна на части и диагностика на двигателя.", Price = 150.00m, EstimatedTime = 120 },
        new { Id = 2, Name = "Смяна на масло", Description = "Смяна на моторно масло и филтри.", Price = 40.00m, EstimatedTime = 30 },
        new { Id = 3, Name = "Ремонт на трансмисия", Description = "Пълна диагностика и ремонт на трансмисия.", Price = 200.00m, EstimatedTime = 180 }
    };

    var selectedService = services.FirstOrDefault(s => s.Id == serviceId);
}

<h2>@selectedService.Name</h2>
<p><strong>Описание:</strong> @selectedService.Description</p>
<p><strong>Цена:</strong> @selectedService.Price лв.</p>
<p><strong>Ориентировъчно време за изпълнение:</strong> @selectedService.EstimatedTime мин.</p>
